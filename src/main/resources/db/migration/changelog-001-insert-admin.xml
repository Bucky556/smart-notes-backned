<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <!-- INSERT ADMIN PROFILE -->
    <changeSet id="001-insert-admin-profile" author="nodirjon" runOnChange="true">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="profile"/>
            </not>
            <sqlCheck expectedResult="0">
                SELECT COUNT(*) FROM profile WHERE id='b3e37f6a-1a73-4c4d-b3b2-ec61a7f1e0f2';
            </sqlCheck>
        </preConditions>

        <insert tableName="profile">
            <column name="id" value="b3e37f6a-1a73-4c4d-b3b2-ec61a7f1e0f2"/>
            <column name="name" value="Adminjon"/>
            <column name="email" value="adminjon@gmail.com"/>
            <column name="password" value="$2a$10$BXgnKH4M3F13iHRn3pFlnu6VZSupNk8FJeljtEjS0UtV9LH4FhCZ6"/>
            <column name="visible" valueBoolean="true"/>
            <column name="status" value="ACTIVE"/>
            <column name="created_date" valueDate="NOW()"/>
        </insert>
    </changeSet>

    <!-- INSERT ADMIN ROLES -->
    <changeSet id="002-insert-admin-roles" author="nodirjon" runOnChange="true">
        <preConditions onFail="MARK_RAN">
            <sqlCheck expectedResult="0">
                SELECT COUNT(*) FROM profile_role
                WHERE profile_id='b3e37f6a-1a73-4c4d-b3b2-ec61a7f1e0f2'
                  AND role='ROLE_ADMIN';
            </sqlCheck>
        </preConditions>

        <insert tableName="profile_role">
            <column name="profile_id" value="b3e37f6a-1a73-4c4d-b3b2-ec61a7f1e0f2"/>
            <column name="role" value="ROLE_USER"/>
            <column name="created_date" valueDate="NOW()"/>
        </insert>

        <insert tableName="profile_role">
            <column name="profile_id" value="b3e37f6a-1a73-4c4d-b3b2-ec61a7f1e0f2"/>
            <column name="role" value="ROLE_ADMIN"/>
            <column name="created_date" valueDate="NOW()"/>
        </insert>
    </changeSet>

</databaseChangeLog>
